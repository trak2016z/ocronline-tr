{% macro entry(document) %}
<div class="card ocronline-card {% if document.privacy == 0 %} card-outline-primary {% elseif document.privacy == 1 %} card-outline-success {% endif %}">
  <div class="ocronline-overlay">
    <img class="card-img-top img-fluid" src="/show/thumbnail/{{ document.id }}" alt="Card image cap">
    <div class="ocronline-overlay-inside">
        <p class="card-text">{{ document.abstract }}</p>
        <div class="ocronline-overlay-gradient"> </div>
    </div>
  </div>
  <div class="card-block">
    <h4 class="card-title"><a href="/document/show/{{ document.id }}">{{ document.title }}</a></h4>
  </div>
  <div class="card-footer text-muted">
    <ul class="fa-ul">
        <li>
            <i class="fa-li fa fa-calendar" aria-hidden="true"></i>
            {{ document.creationDatetime|date('Y-m-d H:i:s') }}
        </li>
        <li>
            <i class="fa-li fa fa-user" aria-hidden="true"></i>
            <a href="/user/show/{{ document.user.id }}">{{ document.user.username }}</a>
        </li>
        <li>
            {% if document.privacy == 0 %}
                <i class="fa-li fa fa-globe" aria-hidden="true"></i>
                Publiczny
            {% elseif document.privacy == 1 %}
                <i class="fa-li fa fa-unlock-alt" aria-hidden="true"></i>
                Niepubliczny
            {% else %}
                <i class="fa-li fa fa-lock" aria-hidden="true"></i>
                Tylko ja
            {% endif %}
        </li>
    </ul>
  </div>
</div>
{% endmacro %}